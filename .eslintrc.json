{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "endOfLine": "auto",
        "bracketSameLine": false,
        "singleQuote": true,
        "jsxSingleQuote": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignorePattern": "^\\s*className=\\{`[^`]*`\\}",
        "ignoreUrls": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ]
  }
}